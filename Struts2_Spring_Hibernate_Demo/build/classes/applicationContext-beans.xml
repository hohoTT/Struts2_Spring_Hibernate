<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="employeeDao" class="com.wt.dao.EmployeeDao">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="departmentDao" class="com.wt.dao.DepartmentDao">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="employeeService" class="com.wt.service.EmployeeService">
		<property name="employeeDao" ref="employeeDao"></property>
	</bean>
	
	<bean id="departmentService" class="com.wt.service.DepartmentServer">
		<property name="departmentDao" ref="departmentDao"></property>
	</bean>

	<bean id="employeeAction" class="com.wt.actions.EmployeeAction"
		  scope="prototype">
		  <property name="employeeService" ref="employeeService"></property>
		  <property name="departmentServer" ref="departmentService"></property>
	</bean>

</beans>
